node {

properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')), pipelineTriggers([githubPush()])])

echo "this code is build from branch: $BRANCH_NAME"

echo "the current build number is: $BUILD_NUMBER"

echo "the job name of this build is: $JOB_NAME"

echo "the path for this build is: $WORKSPACE"

def mavenHome=tool name:'Maven3.8.6'

stage ('pullcodefromGit'){
git branch: 'development', changelog: false, credentialsId: '1fb6c03e-3036-48e3-aa61-d384f4b179f6', url: 'https://github.com/badassbrahmin/maven-web-application.git'
}

stage('codeBuild'){
sh "${mavenHome}/bin/mvn package"
}

stage('uploadtoSonar'){
sh "${mavenHome}/bin/mvn package sonar:sonar"
}

stage('uploadtoNexus'){
sh "${mavenHome}/bin/mvn package deploy"
}


stage('copytoTomcat'){
sshagent(['3a4471b2-32be-4ae5-b9ea-387f5ea6f7b9']) {
sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.92.219:/opt/apache-tomcat-9.0.67/webapps"
}
}

}
